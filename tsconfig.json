{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__/**/*"
  ]
}
